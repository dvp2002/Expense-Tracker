    <h1 id="balance">₹<%= bal %></h1>

    <div class="inc-exp-container">
      <div>
        <h4>Income</h4>
        <p id="money-plus" class="money plus">₹<%= pos %></p>
      </div>
      <div>
        <h4>Expense</h4>
        <p id="money-minus" class="money minus">₹<%= neg %></p>
      </div>
    </div>
  </div>
